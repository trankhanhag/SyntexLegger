# SyntexLegger Frontend Configuration
# Copy this file to .env.local and update values

# ======================
# API Configuration
# ======================
# Backend API URL (no trailing slash after /api)
# Development:
VITE_API_URL=http://localhost:5000/api

# Production example:
# VITE_API_URL=https://api.yourcompany.com/api

# ======================
# Development Settings
# ======================
# Disable auto-login in development (default: false - auto-login enabled)
# Set to 'true' to require manual login
# IMPORTANT: Always set to 'true' in production!
VITE_DISABLE_AUTO_LOGIN=false

# Auto-login credentials for development ONLY
# DO NOT use in production! Remove these lines or leave empty
VITE_AUTOLOGIN_USERNAME=admin
VITE_AUTOLOGIN_PASSWORD=admin

# ======================
# Feature Flags
# ======================
# Enable/disable specific features
VITE_ENABLE_DEBUG_MODE=false
# VITE_ENABLE_ANALYTICS=false

# ======================
# Application Settings
# ======================
# Application title (shown in browser tab)
VITE_APP_TITLE=SyntexLegger

# Application version (auto-generated from package.json if not set)
# VITE_APP_VERSION=1.0.0

# ======================
# PRODUCTION SETTINGS
# ======================
# For production deployment, create .env.production with:
#
# VITE_API_URL=https://your-api-domain.com/api
# VITE_DISABLE_AUTO_LOGIN=true
# VITE_AUTOLOGIN_USERNAME=
# VITE_AUTOLOGIN_PASSWORD=
# VITE_ENABLE_DEBUG_MODE=false
# VITE_APP_TITLE=SyntexLegger
