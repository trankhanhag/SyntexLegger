# SyntexLegger Server Configuration
# Copy this file to .env and update values

# ======================
# Server Configuration
# ======================
NODE_ENV=development
PORT=5000

# ======================
# Database Configuration
# ======================
# For development (SQLite - default)
# No configuration needed, uses db_v2.sqlite

# For PostgreSQL (staging/production)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=syntex_legger
# DB_USER=postgres
# DB_PASSWORD=your_password

# For production with connection string
# DATABASE_URL=postgresql://user:password@host:5432/database
# DB_SSL=true

# ======================
# Authentication
# ======================
# JWT secret key (REQUIRED for production)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-secure-jwt-secret-key-here

# Token expiration (default: 24h)
JWT_EXPIRES_IN=24h

# Login rate limiting
LOGIN_WINDOW_MS=900000
LOGIN_MAX_ATTEMPTS=5

# ======================
# CORS Configuration
# ======================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:5173,http://localhost:4173

# ======================
# File Upload
# ======================
MAX_UPLOAD_SIZE=10mb
UPLOAD_DIR=./uploads

# ======================
# Logging
# ======================
LOG_LEVEL=info
# LOG_FILE=./logs/app.log

# ======================
# Email (Optional)
# ======================
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=noreply@example.com
# SMTP_PASSWORD=your_smtp_password
# EMAIL_FROM=SyntexLegger <noreply@example.com>
